<Application x:Class="ConverterWizard.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ConverterWizard"
             xmlns:views="clr-namespace:ConverterWizard.Converter.Views"
             xmlns:viewModels="clr-namespace:ConverterWizard.Converter.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:Page1ViewModel}">
            <views:Page1View/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:Page2ViewModel}">
            <views:Page2View/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:Page3ViewModel}">
            <views:Page3View/>
        </DataTemplate>
    </Application.Resources>
</Application>
